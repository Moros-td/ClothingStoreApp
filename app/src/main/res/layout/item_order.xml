<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="130dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/orderCodeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DH001"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NGÀY ĐẶT HÀNG:"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/orderStateTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ĐÃ GIAO"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/orderDateTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="31/01/2024 22:34"/>
            </LinearLayout>

        </LinearLayout>

       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/rcv_product_in_order"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:paddingStart="10dp"
           android:paddingEnd="10dp"/>
        <TextView
            android:id="@+id/totalOrderPriceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="1.500.000đ"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:paddingTop="10dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>